<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Laboratorio_Tiaraju.View.MainViews.DepartmentsView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Departamentos">
    <VerticalStackLayout>

        <Image
            Margin="0,10,0,0"
            HeightRequest="100"
            Source="logotiaraju.png" />

        <Grid
            Margin="0,30,0,0"
            ColumnDefinitions="*,*"
            RowDefinitions="70,30">

            <Image
                Grid.Row="0"
                Grid.Column="0"
                Source="cq_logo" />

            <Label
                Grid.Row="1"
                Grid.Column="0"
                FontSize="15"
                HorizontalTextAlignment="Center"
                Text="Controle de Qualidade" />

            <Image
                Grid.Row="0"
                Grid.Column="1"
                Source="gerenciamentoprojeto.png" />

            <Label
                Grid.Row="1"
                Grid.Column="1"
                FontSize="15"
                HorizontalTextAlignment="Center"
                Text="PMO" />

        </Grid>
    </VerticalStackLayout>
</ContentPage>